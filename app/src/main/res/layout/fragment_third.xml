<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ThirdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Future Gross Pay Earnings in Different Regions and Platforms"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Section: City 1 -->
        <TextView
            android:id="@+id/textCity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mumbai"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <!-- Section: City 2 -->
        <TextView
            android:id="@+id/textCity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart6"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart7"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart8"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>